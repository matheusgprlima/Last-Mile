{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/discoveries/feed.ts": {
      "maxDuration": 30
    },
    "api/discoveries/refresh.ts": {
      "maxDuration": 30
    },
    "api/analyze.ts": {
      "maxDuration": 60
    },
    "api/help/regenerate-links.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/discoveries/refresh",
      "schedule": "0 12 * * *"
    }
  ]
}